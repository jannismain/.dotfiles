# PATH
    export PATH=/home/mkj/.local/bin:$PATH

# ANTIGEN
    source /usr/share/zsh-antigen/antigen.zsh
    antigen use oh-my-zsh
    antigen bundle git
    antigen bundle pytest
    antigen bundle pip
    antigen bundle brew
    antigen bundle zsh-users/zsh-completions
    antigen bundle zsh-users/zsh-autosuggestions
    antigen bundle agkozak/zsh-z
## THEME
    antigen theme refined
    antigen bundle zsh-users/zsh-syntax-highlighting  # must be last
    antigen apply

# COMPLETIONS
    autoload -U +X compinit && compinit  # enable zsh-completions  #TODO: Check if this is required
    autoload -U +X bashcompinit && bashcompinit  # enable bash-completions  #TODO: Check if this is required
    #TODO: enable completions for tools like pytest
    eval "$(register-python-argcomplete pytest)"

# ALIASES
    alias venv="source env/bin/activate"
    alias lsa="ls -al"
    alias g='git'
    alias p="python3"
    alias sudo="sudo -H"

    # Create a folder and move into it in one command
    function mkcd() { mkdir -p "$@" && cd "$_"; }

# PROMPT
    RPROMPT='%B%(?..%F{red}%?)%f%b'

# VARIOUS
    ENABLE_CORRECTION="true"


# SSH locale
export LANG=en_US.utf-8
export LC_ALL=en_US.utf-8

