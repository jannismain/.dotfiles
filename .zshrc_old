# User configuration

# Preferred editor for local and remote sessions
export EDITOR='code --wait'

# SSH
export SSH_KEY_PATH="~/.ssh/rsa_id"

# Interactive Shell
CORRECT_IGNORE_FILE='.*'

# configure ls
export LSCOLORS=ExFxBxDxCxegedabagacad

# from .zshrc on ux1795

# COMPLETIONS
autoload -U +X compinit && compinit  # enable zsh-completions  #TODO: Check if this is required
autoload -U +X bashcompinit && bashcompinit  # enable bash-completions  #TODO: Check if this is required

# VARIOUS
ENABLE_CORRECTION="true"


# SSH locale
export LANG=en_US.utf-8
export LC_ALL=en_US.utf-8


# MBP535 OLD CONFIG

# Workaround for issues with locale
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export LANGUAGE=en_US.UTF-8

# enable command auto-correction.
ENABLE_CORRECTION="true"

# aliases
alias r="radian"
alias ipython="/usr/local/bin/ipython"

CORRECT_IGNORE_FILE='.*'
