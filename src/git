alias g="git"
alias gca="git commit --amend"
alias gri="git rebase --interactive"
alias grim="git rebase --interactive origin/main"
alias grc="git rebase --continue"
alias gp="git push"
alias gpf="git push --force-with-lease"
alias gl="git log"
alias glo="git log --oneline"

# git-extras
if test $MYSHELL_ZSH; then
    source `brew --prefix git-extras`/share/git-extras/git-extras-completion.zsh
else
    source `brew --prefix git-extras`/etc/bash-completion/completions/git-extras
fi
