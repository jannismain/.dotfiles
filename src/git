alias g="git"
alias gca="git commit --amend"
alias gri="git rebase --interactive"
alias grc="git rebase --continue"
alias gp="git push"

# git-extras
export MYSHELL=`ps -p $$ | tail -n 1 | cut -c 26-`
export MYSHELL_ZSH=`echo $MYSHELL | grep "zsh"`
export MYSHELL_BASH=`echo $MYSHELL | grep "bash"`
if test $MYSHELL_ZSH; then
    source `brew --prefix git-extras`/share/git-extras/git-extras-completion.zsh
else
    source `brew --prefix git-extras`/etc/bash-completion/completions/git-extras
fi
