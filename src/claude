#!/bin/sh
alias agentbox="~/ext/agentbox/agentbox"

claude-portkey() (
    source ~/.dotfiles/private/secrets
    CLAUDE_CODE_DISABLE_EXPERIMENTAL_BETAS=1 \
    ANTHROPIC_BASE_URL="https://api.portkey.ai" \
    ANTHROPIC_AUTH_TOKEN="dummy" \
    ANTHROPIC_CUSTOM_HEADERS="x-portkey-api-key: ${PORTKEY_API_KEY}" \
    ANTHROPIC_DEFAULT_SONNET_MODEL="@vertex-ai/anthropic.claude-sonnet-4-6" \
    ANTHROPIC_DEFAULT_HAIKU_MODEL="@vertex-ai/anthropic.claude-haiku-4-5@20251001" \
    ANTHROPIC_DEFAULT_OPUS_MODEL="@vertex-ai/anthropic.claude-opus-4-6" \
    claude "$@"
)

alias ccusage='pnpx ccusage "$@"'
alias claude-usage='ccusage'
alias codex-usage='pnpx @ccusage/codex@latest "$@"'
alias opencode-usage='pnpx @ccusage/opencode@latest "$@"'
